<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fi.jamk.sgky_golfcourses_json_example.MainActivity">


    <ImageView
        android:id="@+id/golfImage"
        android:layout_alignParentTop="true"
        android:layout_height="90dp"
        android:layout_width="90dp"
        android:paddingRight="15dp" />

    <TextView
        android:id="@+id/golfAddress"
        android:layout_toRightOf="@+id/golfImage"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/golfPhone"
        android:layout_toRightOf="@+id/golfImage"
        android:layout_below="@id/golfAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/golfEmail"
        android:layout_toRightOf="@+id/golfImage"
        android:layout_below="@id/golfPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp" />

    <TextView
        android:text="Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/golfImage"
        android:layout_alignParentStart="true"
        android:id="@+id/golfText"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Katso kentät kotisivut:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:layout_below="@+id/golfText"
        android:layout_alignParentStart="true"
        android:id="@+id/golfWebText"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="WebLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/golfWebText"
        android:layout_alignEnd="@+id/golfWebText"
        android:autoLink="all"
        android:id="@+id/golfWebLink"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Katso kentän sijainti:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:layout_below="@+id/golfWebLink"
        android:layout_alignParentStart="true"
        android:id="@+id/golfMapText"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/mapLinkText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/golfMapText"
        android:layout_alignStart="@+id/golfWebLink"
        android:onClick="openMap"
        android:id="@+id/golfMap"
        android:layout_alignParentEnd="true"
        android:textColor="?android:attr/colorAccent" />


</RelativeLayout>
